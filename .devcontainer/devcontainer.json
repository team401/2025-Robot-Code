{
  "name": "WPILib Development",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "none",
      "installMaven": "false",
      "installGradle": "true"
    },
    "desktop-lite": {
      "password": "FRC",
      "webPort": "6080"
    }
  },
  "postCreateCommand": "cd ~ && wget 'https://github.com/wpilibsuite/vscode-wpilib/releases/download/v2025.3.2/vscode-wpilib-2025.3.2.vsix'",
  "customizations": {
    "vscode": {
      "extensions": [
        "/home/vscode/vscode-wpilib-2025.3.2.vsix",
        "vscjava.vscode-java-pack",
        "vscjava.vscode-gradle"
      ]
    }
  }
}
